<class name = "zre_msg" script = "codec_c.gsl">
This is the ZRE protocol version 1.0
<include filename = "license.xml" />

<!-- Protocol version -->
<define name = "VERSION" value = "1" />

<message name = "OHAI" id = "1">
    <field name = "from" type = "string" />
    <field name = "port" type = "number" octets = "2" />
Say hello to a peer so it connect back to us
</message>

<message name = "NOM" id = "2">
    <field name = "cookies" type = "frame" />
Send a message to a peer
</message>

<message name = "HUGZ" id = "3">
Send a heartbeat to a peer
</message>

<message name = "HUGZ-OK" id = "4">
Reply to a peer's heartbeat
</message>

</class>
