<class name = "zre_msg" script = "codec_c.gsl">
This is the ZRE protocol version 1.
<include filename = "license.xml" />

<!-- Protocol version -->
<define name = "VERSION" value = "1" />

<message name = "HELLO" id = "1">
    <field name = "from" type = "string" />
    <field name = "port" type = "number" octets = "2" />
    <field name = "groups" type = "strings" />
    <field name = "status" type = "octet" />
Greet a peer so it connect back to us.
</message>

<message name = "HELLO-OK" id = "2">
    <field name = "groups" type = "strings" />
    <field name = "status" type = "octet" />
Handshake a greeting so our peer gets our status.
</message>

<message name = "WHISPER" id = "3">
    <field name = "cookies" type = "frame" />
Send a message to a peer.
</message>

<message name = "SHOUT" id = "4">
    <field name = "group" type = "string" />
    <field name = "cookies" type = "frame" />
Send a message to a group.
</message>

<message name = "PING" id = "5">
Ping a peer that has gone silent.
</message>

<message name = "PING-OK" id = "6">
Reply to a peer's ping.
</message>

<message name = "JOIN" id = "7">
    <field name = "group" type = "string" />
    <field name = "status" type = "octet" />
Join a group.
</message>

<message name = "LEAVE" id = "8">
    <field name = "group" type = "string" />
    <field name = "status" type = "octet" />
Leave a group.
</message>

</class>
